#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged if available; otherwise skip gracefully to avoid GUI PATH issues
if command -v npx >/dev/null 2>&1; then
  npx lint-staged
elif [ -x "./node_modules/.bin/lint-staged" ] && command -v node >/dev/null 2>&1; then
  ./node_modules/.bin/lint-staged
else
  echo "[husky] lint-staged skipped: Node/NPM not available in current PATH"
  exit 0
fi
