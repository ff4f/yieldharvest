{
  "name": "yieldharvest-backend",
  "version": "1.0.0",
  "description": "YieldHarvest Backend - Invoice factoring platform on Hedera",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "seed:demo": "tsx scripts/seed-demo-data.ts",
    "deploy:contracts": "tsx scripts/deploy-contracts.ts",
    "verify:deployment": "tsx scripts/verify-deployment.ts",
    "audit:security": "echo 'Running security audit checklist...' && cat scripts/contract-audit-checklist.md",
    "test:e2e": "playwright test",
    "test:security": "npm run test && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:smoke": "tsx tests/smoke/smoke-tests.ts",
    "verify:production": "tsx scripts/verify-production.ts",
    "validate:config": "tsx scripts/validate-config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "@hashgraph/sdk": "^2.49.2",
    "@prisma/client": "^5.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.3.1",
    "fastify": "^5.6.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^8.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "hedera",
    "invoice",
    "factoring",
    "blockchain",
    "nft",
    "hts",
    "hfs",
    "hcs"
  ],
  "author": "YieldHarvest Team",
  "license": "MIT"
}
