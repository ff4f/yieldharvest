{
  "name": "yieldharvest-backend",
  "version": "1.0.0",
  "description": "YieldHarvest Backend - Invoice factoring platform on Hedera",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:silent": "jest --silent",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:reset": "prisma migrate reset --force",
    "compile:contracts": "hardhat compile",
    "deploy:services": "tsx scripts/setup-hedera-services.ts",
    "deploy:escrow": "tsx scripts/deploy-escrow-system.ts",
    "deploy:all": "npm run compile:contracts && npm run deploy:services && npm run deploy:escrow",
    "verify:escrow": "tsx scripts/verify-escrow-deployment.ts",
    "setup:testnet": "HEDERA_NETWORK=testnet npm run deploy:all",
    "setup:mainnet": "HEDERA_NETWORK=mainnet npm run deploy:all",
    "validate:config": "tsx scripts/validate-config.ts",
    "test:hedera": "jest --testPathPattern=hedera --watch",
    "test:db": "jest --testPathPattern=database --watch",
    "seed": "tsx scripts/seed-demo-data.ts",
    "seed:demo": "tsx scripts/seed-demo-data.ts",
    "verify:production": "tsx scripts/verify-production.ts",
    "test:smoke": "jest --testPathPattern=smoke",
    "health:check": "curl http://localhost:3001/health",
    "db:status": "tsx scripts/check-db-connection.ts"
  },
  "keywords": [
    "hedera",
    "invoice",
    "factoring",
    "nft",
    "blockchain",
    "defi"
  ],
  "author": "YieldHarvest Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@fastify/websocket": "^10.0.1",
    "@hashgraph/sdk": "^2.74.0",
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "sharp": "^0.33.5",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "hardhat": "^2.22.10",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "node-notifier": "^10.0.1",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
